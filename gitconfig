[user]
name = Kevin Lanvin
email = kevin.lanvin@corp.ovh.com

[color]
ui = auto

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
meta = yellow bold
frag = magenta bold
old = red bold
new = green bold
whitespace = red reverse

[color "status"]
added = yellow
changed = green
untracked = cyan

[alias]
l  = log --graph --date-order --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --abbrev-commit
la = !git l --all

rmtls = remote -v show
brls = branch -vva --list

current-branch = rev-parse --abbrev-ref HEAD
pushbr = !git push --set-upstream origin `git current-branch`
st = status
ci = commit
br = branch
co = checkout
df = diff
dc = diff --cached
ls = ls-files

[core]
editor = vim
